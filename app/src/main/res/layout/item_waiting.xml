<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:background="@color/colorWaitingRecyclerBgd"
    android:layout_marginRight="@dimen/dimen_8"
    android:id="@+id/rl_bgd">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="@dimen/dimen_16">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_huge"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="QR SCAN" />
            <TextView
                android:id="@+id/tv_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_huge"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="QR SCAN"
                android:visibility="gone"/>

        </LinearLayout>



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="00:01"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="@dimen/text_huge"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreen"
        android:layout_margin="@dimen/activity_horizontal_margin_4"
        android:paddingBottom="@dimen/padding_normalx2"
        android:paddingTop="@dimen/padding_normalx2"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        android:weightSum="5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="David Stevens"
            android:textAllCaps="true"
            android:layout_weight="3.5"
            android:maxLines="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Â£10.00"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/text_large"
            android:layout_weight="1.5"
            android:gravity="right"
            android:maxLines="1"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorYellow"
        android:layout_marginRight="@dimen/activity_horizontal_margin_4"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_4"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_4"
        android:paddingBottom="@dimen/padding_normalx2"
        android:paddingTop="@dimen/padding_normalx2"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:textColor="@color/colorBlack"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="NOTE :"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:text="No gerkings"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_large"
            android:layout_marginBottom="@dimen/dimen_20"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_assets"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dimen_12">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/btn_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:text="ACCEPT"
                android:layout_marginRight="2dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue"
                    android:text="pickup"
                    android:layout_marginRight="2dp"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/btn_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_yellow"
                    android:text="Call again"
                    android:visibility="gone"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_red"
                android:text="DECLINE" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>