<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kimersoft.pointofsaleterminal">

    <!-- 允许应用程序写入外部存储器 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许使用相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- NFC权限声明 -->
    <uses-permission android:name="android.permission.NFC" />




    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MyMenuPOS"
        android:screenOrientation="portrait" />

        <activity android:name=".LynqMenu" />

        <activity android:name=".CardLynq"
        android:screenOrientation="portrait" />

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".PSAMActivity" />
        <activity android:name=".PSAMActivity2" />
        <activity android:name="com.kimersoft.pointofsaleterminal.PSAMActivityV2"/>
        <activity android:name="com.kimersoft.pointofsaleterminal.PrinterActivity" />
        <activity android:name="com.kimersoft.pointofsaleterminal.ScannerActivity" />
        <activity android:name="com.kimersoft.pointofsaleterminal.CustomerScreenActivity" />
        <activity android:name="com.kimersoft.pointofsaleterminal.ManeticCardActivity" />
        <activity android:name="com.kimersoft.pointofsaleterminal.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity android:name="com.kimersoft.pointofsaleterminal.NfcActivity" >
            <!-- TECH_DISCOVERED类型的nfc -->
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
        </activity>

        <activity android:name="com.kimersoft.pointofsaleterminal.nfc.NFCActivity"/>
        <activity android:name="com.kimersoft.pointofsaleterminal.nfc.NFCAcmdActivity"/>
        <activity android:name="com.kimersoft.pointofsaleterminal.scan.ScanInstructionActivity"/>
        <activity android:name="com.kimersoft.pointofsaleterminal.scan.ScanSetActivity"/>
        <activity android:name=".IDCardActivity"/>
        <activity android:name=".CardLynqPSAM2" />

    </application>

</manifest>